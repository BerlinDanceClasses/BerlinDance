<div class="p-3"></div>
<h1>Edit Course {{title}}</h1>
<div class="p-3"></div>

<form method="POST" action="/courses/{{ course._id }}/edit">
    <label for="name" class="form-label">Name:</label>
    <input type="text" name="name" class="form-control w-50" value="{{ course.name }}" required />

    <label for="dancestyle" class="form-label">Dance Style:</label>
    <input type="text" name="dancestyle" class="form-control w-50" value="{{ course.dancestyle }}" />

    <label for="teacher" class="form-label">Teacher:</label>
    <input type="text" name="teacher" class="form-control w-50" value="{{ course.teacher }}" />

    <label for="location" class="form-label">Location: </label>
    <input type="text" name="location" class="form-control w-50" value="{{ course.location }}" />

    <label for="address" class="form-label">Address:</label>
    <input type="text" name="address" class="form-control w-50" value="{{ course.address }}" />

    <label for="level" class="form-label">Level:</label>
    <input type="text" name="level" class="form-control w-50" value="{{ course.level }}" />

    <label for="price" class="form-label">Price:</label>
    <input type="text" name="price" class="form-control w-50" value="{{ course.price }}" />

    <label for="description" class="form-label">Description:</label>
    <input type="text" name="description" class="form-control w-50" value="{{ course.description }}" />

    
    <label for="time" class="form-label">Time:</label>
    <input type="time" name="time" class="form-control w-50" value="{{ course.time }}" required />

    <label for="date" class="form-label">Date:</label>
    <input type="date" name="date" class="form-control w-50" value="{{ course.date }}" required />
    
    <div class="p-3"></div>
    <button class="btn btn-primary">Save changes</button>
    <a class="btn btn-warning" href="/courses">Back</a>
</form>